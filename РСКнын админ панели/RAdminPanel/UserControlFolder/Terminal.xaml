                                <ComboBoxItem Content="3"/>
                            </ComboBox>
                            <Button Style="{DynamicResource ResourceKey=ButtonStyle}" Canvas.Left="602" Canvas.Top="89" Click="Button_Click_11">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/RAdminPanel;component/Image/Ico/Clear.png" Margin="0,0,10,0"/>
                                    <TextBlock Text="Очистить все"/>
                                </StackPanel>
