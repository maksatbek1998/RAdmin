<UserControl x:Class="RAdminPanel.UserControlFolder.Rasspisania"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAdminPanel.UserControlFolder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Padding="20">
            <TabControl BorderThickness="0">
                <TabItem x:Name="tab1" Header="СЭО майрам кундору" Style="{DynamicResource TabControl}" Width="150">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Canvas>
                            <TextBlock x:Name="terminal" Text="Терминалдын дем алуу убакыттары" Canvas.Left="6" Canvas.Top="18" Width="290"/>
                            <DatePicker x:Name="Power_Date" Canvas.Left="287" Canvas.Top="16" Width="230" DisplayDate="2021-01-02" />
                            <Button x:Name="save" Content="Сактоо" Style="{DynamicResource ButtonStyle}" Canvas.Left="545" Canvas.Top="51" Click="Button_Click"/>
                            <TextBlock x:Name="Ochuu" Text="Очуу убакты" Canvas.Left="6" Canvas.Top="52" Width="134"/>
                            <ComboBox x:Name="Power_OF" Canvas.Left="141" Canvas.Top="52" Width="115" IsReadOnly="False">
                                <ComboBoxItem Content="16:00"/>
                                <ComboBoxItem Content="17:00"/>
                                <ComboBoxItem Content="18:00"/>
                                <ComboBoxItem Content="19:00"/>
                            </ComboBox>
                            <TextBlock x:Name="ter_name" Text="Терминал" Canvas.Left="314" Canvas.Top="52" Width="83"/>
                            <ComboBox x:Name="TerminalName" Canvas.Left="402" Canvas.Top="52" Width="115" IsReadOnly="True" SelectionChanged="TerminalName_SelectionChanged">
                            </ComboBox>
                        </Canvas>
                        <DataGrid x:Name="RaspisaniaData" FontSize="12"  CanUserAddRows="False" Style="{DynamicResource grid_xml}" ColumnHeaderStyle="{DynamicResource hederstyle}" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto"   HeadersVisibility="Column" IsReadOnly="True"
                   AutoGenerateColumns="False"  Grid.Row="1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№" Width="50" Binding="{Binding id}"/>
                                <DataGridTextColumn x:Name="Ochuu_ubakty" Header="Очуу убакты" Binding="{Binding t_OF}"/>
                                <DataGridTextColumn x:Name="Ochuu_Terminal" Header="Терминал" Binding="{Binding t_name}"/>
                                <DataGridTextColumn x:Name="Ochuu_data" Header="Дата" Binding="{Binding t_date}"/>
                                <DataGridTemplateColumn x:Name="Ochuu_delete" Header="Удалить" Width="80" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{DynamicResource Close_Button}" BorderThickness="0,0,0,0" Cursor="Hand" Click="Button_Click_1">
                                                <Image Source="/RAdminPanel;component/Image/Ico/udalit4.png" Width="20"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tab2" Header="СЭО график боюнча" Style="{DynamicResource TabControl}" Width="150">
                    <Grid>
                        <Grid Grid.Row="1" Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Canvas>
                                <TextBlock x:Name="T_ochuu" Text="Очуу убакты" Canvas.Left="12" Canvas.Top="11" Width="111"/>
                                <ComboBox x:Name="OF_Time" Canvas.Left="128" Canvas.Top="10" Width="76" IsReadOnly="False">
                                    <ComboBoxItem Content="16:00"/>
                                    <ComboBoxItem Content="17:00"/>
                                    <ComboBoxItem Content="18:00"/>
                                    <ComboBoxItem Content="19:00"/>
                                </ComboBox>
                                <Button x:Name="save_button" Content="Сактоо" Style="{DynamicResource ButtonStyle}" Canvas.Left="548" Canvas.Top="45" Click="Button_Click_2"/>
                                <TextBlock x:Name="T_day" Text="Кун тартиби" Canvas.Left="243" Canvas.Top="46" Width="101"/>
                                <ComboBox x:Name="DayCombobox" Canvas.Left="349" Canvas.Top="46" Width="158" IsReadOnly="True">
                                    <ComboBoxItem Content="Понедельник"/>
                                    <ComboBoxItem Content="Вторник"/>
                                    <ComboBoxItem Content="Среда"/>
                                    <ComboBoxItem Content="Четверг"/>
                                    <ComboBoxItem Content="Пятница"/>
                                    <ComboBoxItem Content="Суббота"/>
                                    <ComboBoxItem Content="Воскресенье"/>
                                </ComboBox>
                                <TextBlock x:Name="T_name" Text="Терминал" Canvas.Left="243" Canvas.Top="10" Width="100"/>
                                <ComboBox x:Name="TerminalName_Copy" Canvas.Left="349" Canvas.Top="10" Width="158" IsReadOnly="True" SelectionChanged="TerminalName_Copy_SelectionChanged"/>
                                <TextBlock x:Name="T_abaly" Text="Абалы" Canvas.Left="14" Canvas.Top="41" Width="80"/>
                                <ComboBox x:Name="TerminalPower_Copy" Canvas.Left="128" Canvas.Top="41" Width="76" IsReadOnly="True">
                                    <ComboBoxItem Content="ON"/>
                                    <ComboBoxItem Content="OF"/>
                                </ComboBox>
                            </Canvas>
                            <DataGrid x:Name="Day_Grafik"  FontSize="12"  CanUserAddRows="False" Style="{DynamicResource grid_xml}" ColumnHeaderStyle="{DynamicResource hederstyle}" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto"   HeadersVisibility="Column" IsReadOnly="True"
                   AutoGenerateColumns="False"  Grid.Row="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="№" Width="50" Binding="{Binding id}"/>
                                    <DataGridTextColumn x:Name="D_Ochuu" Header="Очуу убакты" Binding="{Binding t_of}"/>
                                    <DataGridTextColumn x:Name="D_day" Header="Дни недели" Binding="{Binding day}"/>
                                    <DataGridTextColumn x:Name="D_terminal" Header="Терминал" Binding="{Binding t_name}"/>
                                    <DataGridTextColumn x:Name="D_abal" Header="Абалы" Binding="{Binding t_key}"/>
                                    <DataGridTemplateColumn x:Name="D_delete" Header="Удалить" Width="80" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{DynamicResource Close_Button}" BorderThickness="0,0,0,0" Cursor="Hand" Click="Button_Click_3">
                                                    <Image Source="/RAdminPanel;component/Image/Ico/udalit4.png" Width="20"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
